<div class='row'>
  <div class='col-md-6 col-md-offset-3 well'>
    <h2>Signin</h2>

    <form  accept-charset="UTF-8" >
      <div class="form-group row">
        <label for="phone-number-input" class="col-md-3 col-form-label">Phone number:</label>
        <div class="col-md-9">
           <input class="form-control disabled" name="phone_number" type="text" value="<%= params[:phone_number] %>" id="phone-number-input" disabled='disabled' />
        </div>

      </div>

      <div class="form-group row">
        <label for="secret-token-input" class="col-md-3 col-form-label">Secret token:</label>
        <div class="col-md-9">
           <input class="form-control" name="secret_token" type="text" value="" placeholder="secret token" id="secret-token-input">
        </div>

      </div>

    <input type='submit' value='Signin' class='btn btn-primary' name = "submit" />
    </form>
  </div>

</div>